# Создайте файл .env.local и заполните эти значения

# Database - используйте local PostgreSQL или cloud провайдера
DATABASE_URL="postgresql://user:password@localhost:5432/game_donate_store?schema=public"

# NextAuth - сгенерируйте секрет: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-generated-secret-here"

# Stripe - получите на https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_51..."
STRIPE_SECRET_KEY="sk_test_51..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# RAWG API - бесплатный ключ на https://rawg.io/apidocs
RAWG_API_KEY="your-rawg-api-key"

# App Settings
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_CURRENCY="RUB"

# Admin credentials для seed
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="admin123"
